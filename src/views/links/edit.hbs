<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form action="/links/edit/{{update.id}}" method="POST">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <input value="{{update.title}}" type="text" name="title" class="form-control" placeholder="Escribe el titulo" autofocus>
                        </div>
                        <div class="form-group">
                            <input value="{{update.url}}" type="url" name="url" class="form-control" placeholder="Escribe la url" >
                        </div>
                        <div class="form-group">
                            <textarea  placeholder="Escribe la descripcion" name="description" rows="2" class="form-control">{{update.description}}</textarea>
                        </div>
                        <div class="form-group">
                           <button class="btn btn-info btn-block">ENVIAR</button>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>